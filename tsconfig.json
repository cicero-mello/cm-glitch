{
    "compilerOptions": {
        "target": "ES2022", // versão moderna ES
        "module": "ES2022", // módulo moderno para import/export
        "declaration": true, // gera arquivos .d.ts para tipagem
        "outDir": "./dist", // pasta de saída do build
        "strict": true, // ativa checagem rigorosa
        "esModuleInterop": true, // ajuda na compatibilidade CommonJS
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "useUnknownInCatchVariables": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
    },
    "include": [
        "src"
    ]
}
